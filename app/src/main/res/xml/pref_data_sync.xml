<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->


    <CheckBoxPreference
        android:defaultValue="true"
        android:title="Downsize before upload"
        android:key="downsize_switch"
        android:summary="This can shorten upload time and save some bandwidth" />
    <EditTextPreference
        android:defaultValue="2000"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Size of the longer side"
        android:key="downsize_longer_side"
        android:summary="Longer side of the downsized image will be this long"
        android:numeric="integer"
        android:dependency="downsize_switch" />
    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />



    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->
    <Preference android:title="@string/pref_title_system_sync_settings">
        <intent android:action="android.settings.SYNC_SETTINGS" />
    </Preference>

</PreferenceScreen>
